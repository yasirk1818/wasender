<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Settings</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="main-header">
        <h1>User Settings</h1>
        <div>
            <a href="/dashboard" class="btn-secondary">Back to Dashboard</a>
            <a href="/auth/logout" class="btn-logout">Logout</a>
        </div>
    </header>

    <main class="dashboard-container">
        <div class="card">
            <div class="card-header">
                <h2>Bulk Sending Configuration</h2>
            </div>
            <div class="card-content">
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="flash-message <%= message.type %>"><%= message.text %></div>
                <% } %>

                <form action="/settings" method="POST">
                    <div class="input-group">
                        <label for="messagesPerDevice">Messages Per Device</label>
                        <input type="number" id="messagesPerDevice" name="messagesPerDevice" value="<%= user.messagesPerDevice %>" min="1" required>
                        <p class="input-help">Number of messages to send from one device before switching to the next.</p>
                    </div>

                    <div class="input-group">
                        <label for="deviceSwitchDelay">Device Switch Delay (in seconds)</label>
                        <input type="number" id="deviceSwitchDelay" name="deviceSwitchDelay" value="<%= user.deviceSwitchDelay %>" min="0" required>
                        <p class="input-help">Time to wait after switching a device before sending the next message.</p>
                    </div>
                    
                    <button type="submit" class="btn-primary">Save Settings</button>
                </form>
            </div>
        </div>
    </main>
</body>
</html>
